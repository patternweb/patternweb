{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noStrictGenericChecks": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "target": "es2015",
    "lib": [
      "dom",
      "es2015"
    ]
    // "outDir": "dist",
    // "rootDir": "src"
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
